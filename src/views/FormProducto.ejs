<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./head') %>
        <link rel="stylesheet" href="css/auth.css">
</head>

<body>
    <header class="header shop">
        <%- include('./Barsup') %>
    </header>
    <main class="container wow fadeIn animated">
        <div class="card shadow my-5" style="min-width: 300px;">
            <form class="card-body" action="/formP" method="POST">
                <h2 class="mt-3 h2 text-center">Añadir Producto</h2>
                <div class="md-form">
                  <label for="nombre">Nombre:</label>
                  <input type="text" id="nombre" name="nombre" class="form-control"><br>
                </div>
                <div class="md-form">
                  <label for="precio">Precio:</label>
                  <input type="number" id="precio" name="precio" class="form-control"><br>
                </div>
                <div class="md-form">
                  <label for="descripcion">Descripción:</label>
                  <textarea id="descripcion" name="descripcion" class="form-control" ></textarea><br>
                </div>
                <div class="md-form">
                  <div>
                    <label for="categoria">Categoría:</label>
                    <div class="md-form">
                      <select id="categoria" name="categoria" class="form-control">
                        <% for (let i=0; i < Cant ; i++) { %>
                        <option value="<%= Dcat[i].id_categoria %>"><%= Dcat[i].nombre %></option>
                        <% } %>        
                      </select><br>
                    </div><br>
                    <br>
                  </div>                
                  
                </div>
                
                <div class="md-form">
                    <label for="Cantidad">Cantidad:</label>
                    <input type="text" id="Cantidad" name="Cantidad" class="form-control"><br>
                </div>

                <div class="md-form">
                  <div>
                    <label for="img">Imagen:</label>
                  </div>
                  <input type="file"name="img" class="form-control-file"><br>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block waves-effect waves-light"
                    type="submit">Añadir</button>
            </form>
        </div>
    </main>
    <div class="container">
      <div class="row">
          <div class="jumbotron ">
              <h1>
                  Lista de Productos
              </h1>
         </div>   
      </div> 
  </div> 
  
  <div class="container">     
      <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
              <div class="card">
                  <div class="card-header">
                      <h4>Lista</h4>
                  </div>
                  <div class="card-body">
                      <div class="table-responsive">
                          <table id="userList" class="table table-bordered table-hover table-striped">
                              <thead class="thead-light">
                              <tr>
                                  <th scope="col">#</th>                                  
                                  <th scope="col">Nombre</th>
                                  <th scope="col">Precio</th>
                                  <th scope="col">Descripcion</th>
                                  <th scope="col">Correo</th>
                                  <th scope="col">Categoria</th>
                                  <th scope="col">Cantidad</th>
  
                                  <th></th>
                              </tr>
                              </thead>
                              <tbody>
                                  <% for (let i=0; i < pacientes.length; i++) { %>
                                  <tr>
                                      <td scope="col"><%= i+1 %></td>
                                      <td scope="col"><%= pacientes[i].nombre%></td>
                                      <td scope="col"><%= pacientes[i].edad%></td>
                                      <td scope="col"><%= pacientes[i].sexo%></td>
                                      <td scope="col"><%= pacientes[i].fechaNac%></td>
                                      <td scope="col"><%= pacientes[i].correo%></td>
                                      <td scope="col"><%= pacientes[i].idOcupacion%></td>
                                      <td scope="col"><%= pacientes[i].telefono%></td>
                                      <td scope="row p-3">
                                      <form action="/gpaciente/delete" method="post">
                                          <input type="hidden" name="user" value=<%= pacientes[i].user %>>
                                          <button class="btn btn-outline-danger bi bi-trash" type="submit" ></button>
                                      </form>
                                      <form action="/mpaciente" method="post">                            
                                          <input type="hidden" name="user" value=<%= pacientes[i].user %>>
                                          <button class="btn btn-outline-primary bi bi-pencil" type="submit"></button>
                                      </form>                           
                                      </td>
                                  </tr>
                                  <% } %>
                              </tbody>
                          </table>
                      </div>  
                  </div>
              </div>
          </div>          
      </div>  
  </div>
    <%- include('./scripts') %>
</body>

</html>